<!doctype html>
<html lang="en">
<head>
	<%- include('../user-partials/head') %>

</head>
<body>
    <div class="page sub-page">
        <!--*********************************************************************************************************-->
        <!--************ HERO ***************************************************************************************-->
        <!--*********************************************************************************************************-->
        <header class="hero">
            <div class="hero-wrapper">
                <!--============ Secondary Navigation ===============================================================-->
                
                <!--============ End Secondary Navigation ===========================================================-->
                <!--============ Main Navigation ====================================================================-->
                <div class="main-navigation">
                    <div class="container">
                        <%- include('../user-partials/navbar') %>
                        <!--end navbar-->
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Ana sayfa</a></li>
                            <li class="breadcrumb-item"><a href="#">Duyurular</a></li>
                        </ol>
                        <!--end breadcrumb-->
                    </div>
                    <!--end container-->
                </div>
                <!--============ End Main Navigation ================================================================-->
                <!--============ Page Title =========================================================================-->
                <div class="page-title">
                    <div class="container">
                        <h1>Duyurular</h1>
                    </div>
                    <!--end container-->
                </div>
                <!--============ End Page Title =====================================================================-->
                <div class="background"></div>
                <!--end background-->
            </div>
            <!--end hero-wrapper-->
        </header>
        <!--end hero-->

        <!--*********************************************************************************************************-->
        <!--************ CONTENT ************************************************************************************-->
        <!--*********************************************************************************************************-->
        <section class="content">
            <section class="block">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <% for (let index = 0; index < announcementdata.length; index++) { %>
                            <article class="blog-post clearfix">
                                <a href="/user/announcement-detail-page/<%= announcementdata[index].slug %>">
                                    <img src="/<%= announcementdata[index].resimler[0].dosyaYolu.replace(/\\/g, '/') %>" alt="">
                                </a>
                                <div class="article-title">
                                    <h2><a href="/user/announcement-detail-page/<%= announcementdata[index].slug %>"><%= announcementdata[index].DuyuruAdi %></a></h2>
                                    <div class="tags framed">
                                        <a  class="tag"><%= announcementdata[index].Kategori %></a>
                                    </div>
                                </div>
                                <div class="meta">
                                    <figure>
                                        <a class="icon">
                                            <i class="fa fa-user"></i>
                                            John Doe
                                        </a>
                                    </figure>
                                    <figure>
                                        <i class="fa fa-calendar-o"></i>
                                        <%= announcementdata[index].Tarih %>
                                    </figure>
                                </div>
                                <div class="blog-post-content">
                                    <p>
                                        <%= announcementdata[index].Aciklama %>
                                    </p>
                                    <a href="/user/announcement-detail-page/<%= announcementdata[index].slug %>" class="btn btn-primary btn-framed detail">Daha Fazlası</a>
                                </div>
                            </article>
                            <% } %>
                            <!--end Articles-->

                            <div class="page-pagination">
                                <nav aria-label="Pagination">
                                    <ul class="pagination">
                                        <li class="page-item <%= current == 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="?page=<%= current - 1 %>" aria-label="Previous">
                                                <span aria-hidden="true"><i class="fa fa-chevron-left"></i></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        <% for(let i = 1; i <= pages; i++) { %>
                                            <li class="page-item <%= current == i ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                            </li>
                                        <% } %>
                                        <li class="page-item <%= current == pages ? 'disabled' : '' %>">
                                            <a class="page-link" href="?page=<%= current + 1 %>" aria-label="Next">
                                                <span aria-hidden="true"><i class="fa fa-chevron-right"></i></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <!--end page-pagination-->
                        </div>
                        <!--end col-md-8-->

                        <div class="col-md-4">
                            <!--============ Side Bar ===============================================================-->
                            <aside class="sidebar">
                                <section>
                                    <h2>Duyuru Ara</h2>
                                    <!--============ Side Bar Search Form ===========================================-->
                                    <form class="sidebar-form form" method="GET" action="/user/search-announcement">
                                        <div class="form-group">
                                            <label for="what" class="col-form-label">Ne Arıyorsunuz?</label>
                                            <input name="keyword" type="text" class="form-control" id="what" placeholder="Arramak istediğiniz şeyi girin">
                                        </div>
                                        <!--end form-group-->
                                    </form>
                                    <!--============ End Side Bar Search Form =======================================-->
                                </section>
                                <section>
                                    <h2>Popüler Duyurular</h2>
                                    <% popularAnnouncements.forEach(announcement => { %>
                                        <div class="sidebar-post">
                                            <a href="/announcement/<%= announcement.slug %>" class="background-image">
                                                <% if (announcement.resimler && announcement.resimler.length > 0) { %>
                                                    <img src="/<%= announcement.resimler[0].dosyaYolu.replace(/\\/g, '/') %>" alt="<%= announcement.DuyuruAdi %>">
                                                <% } else { %>
                                                    <img src="default-image-path.jpg" alt="<%= announcement.DuyuruAdi %>">
                                                <% } %>
                                            </a>
                                            <div class="description">
                                                <h4>
                                                    <a href="/user/announcement-detail-page/<%= announcement.slug %>"><%= announcement.DuyuruAdi %></a>
                                                </h4>
                                                <div class="meta">
                                                    <a ><%= announcement.Yorumlar.length %> yorum</a>
                                                    <figure><%= announcement.Tarih %></figure>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                    <!--end sidebar-post-->

                                    
                                    <!--end sidebar-post-->

                                    
                                    <!--end sidebar-post-->

                                </section>          
                            </aside>
                            <!--============ End Side Bar ===========================================================-->
                        </div>
                        <!--end col-md-3-->
                    </div>
                </div>
                <!--end container-->
            </section>
            <!--end block-->
        </section>
        <!--end content-->

        <!--*********************************************************************************************************-->
        <!--************ FOOTER *************************************************************************************-->
        <!--*********************************************************************************************************-->
        <%- include('../user-partials/footer') %>
        <!--end footer-->
    </div>
    <!--end page-->
    
	<%- include('../user-partials/script') %>

</body>
</html>
