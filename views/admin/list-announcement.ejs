<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Duyurular</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th> # </th>
              <th> Duyuru Başlığı </th>
              <th> Kategori </th>
              <th> Oluşturulma Tarihi </th>
              <th> Görüntüle </th>
              <th> Sil </th>
            </tr>
          </thead>
          <tbody>
            <% for( let index = 0; index < announcementdata.length; index++ ) { %>
              <tr>
                <td> <%= index+1 %> </td>
                <td> <%= announcementdata[index].DuyuruAdi %> </td>
                <td><%= announcementdata[index].Kategori %> </td>
                <td> <%= announcementdata[index].Tarih %> </td>
                <td>
                  <a class="btn btn-warning" href="/admin/display-announcement/<%= announcementdata[index]._id %>">Görüntüle</a>
                </td>
                <td>
                  <form action="/admin/list-announcement/<%= announcementdata[index]._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Sil</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  